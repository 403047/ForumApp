@model IEnumerable<ForumApp.Models.Post>


<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h3 class="card-title mb-0">Danh sách bài viết đã duyệt</h3>
        </div>
        <div class="card-body p-0">
            <table class="table table-striped table-hover mb-0">
                <thead class="table-dark">
                    <tr>
                        <th>Tiêu đề</th>
                        <th>Người đăng</th>
                        <th>Ngày đăng</th>
                        <th>Tổng đánh giá</th>
                        <th>Giá</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var post in Model.Where(p => p.Status == "Đã duyệt"))
                    {
                        <tr>
                            <td>
                                <a href='@Url.Action("Details", "Post", new { id = post.Id })' class="text-decoration-none">
                                    @post.Title
                                </a>
                            </td>
                            <td>
                                @* @(post.User != null ? post.User?.Username : "Không xác định")  *@
                                @post.User?.Username
                            </td>
                            <td>@post.CreatedAt.ToString("dd/MM/yyyy")</td>
                            <td>@post.TotalRating.ToString("0.0")</td>
                            <td>
                                @(post.CurrentPrice.HasValue
                                    ? post.CurrentPrice.Value.ToString("0.00") + " VNĐ"
                                    : "Miễn phí")
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
