<thead>
    <tr>
        <th>Tiêu đề</th>
        <th>Người đăng</th>
        <th>Ngày đăng</th>
        <th>Tổng đánh giá</th>
    </tr>
</thead>
<tbody>
    @foreach (var post in Model)
    {
        <tr>
            <td>
                <a href="@Url.Action("Details", "Post", new { id = post.Id })">
                    @post.Title
                </a>
            </td>
            <td>@(post.User?.Username ?? "Không xác định")</td>
            <td>@post.CreatedAt.ToString("dd/MM/yyyy")</td>
            <td>@(post.TotalRating.HasValue ? post.TotalRating.Value.ToString("0.0") : "Chưa có")</td>
        </tr>
    }
</tbody>
