@{
    ViewData["Title"] = "Login";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
<div class="container min-vh-100 d-flex align-items-center justify-content-center" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
    <div class="card shadow-lg p-4" style="max-width: 400px; width: 100%; border-radius: 15px;">
        <div class="text-center mb-4">
            <h1 class="h3 mb-3 fw-bold">Đăng nhập</h1>
        </div>
        @if (TempData["RegisterSuccess"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show text-center" role="alert" id="register-success-alert">
                @TempData["RegisterSuccess"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
            <script>
                setTimeout(function () {
                    var alert = document.getElementById('register-success-alert');
                    if (alert) {
                        var bsAlert = new bootstrap.Alert(alert);
                        bsAlert.close();
                    }
                }, 3000);
            </script>
        }
        <form method="post" asp-controller="Account" asp-action="Login">
            <div class="mb-3 position-relative">
                <label class="form-label" for="username">Tên đăng nhập</label>
                <div class="input-group">
                    <span class="input-group-text bg-white"><i class="fas fa-user"></i></span>
                    <input type="text" class="form-control" id="username" name="username" required />
                </div>
            </div>
            <div class="mb-3 position-relative">
                <label class="form-label" for="password">Mật khẩu</label>
                <div class="input-group">
                    <span class="input-group-text bg-white"><i class="fas fa-lock"></i></span>
                    <input type="password" class="form-control" id="password" name="password" required />
                </div>
            </div>
            <button type="submit" class="btn btn-primary w-100 fw-semibold">Đăng nhập</button>
        </form>
        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger mt-3 text-center">@ViewBag.Error</div>
        }
    </div>
</div>
<style>
    body {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        min-height: 100vh;
    }
</style>
