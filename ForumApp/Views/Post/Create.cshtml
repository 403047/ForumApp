@model ForumApp.Models.Post
@{
    ViewData["Title"] = "Tạo bài viết mới";
}

<h2 class="mt-4">Tạo bài viết mới</h2>

<form asp-action="Create" asp-controller="Post" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label for="Title">Tiêu đề</label>
        <input type="text" class="form-control" asp-for="Title" required>
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="CategoryId">Danh mục</label>
        <select class="form-control" asp-for="CategoryId" asp-items="@ViewBag.Categories">
            <option value="">-- Chọn danh mục --</option>
        </select>
        <span asp-validation-for="CategoryId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="Content">Nhập nội dung (hoặc tải file Word)</label>
        <textarea id="contentInput" class="form-control" asp-for="Content"></textarea>
        <span asp-validation-for="Content" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="fileUpload">Tải lên file Word (hoặc nhập nội dung)</label>
        <input id="fileUpload" type="file" class="form-control" name="file" accept=".doc,.docx">
    </div>

    <button type="submit" class="btn btn-primary mt-3">Đăng bài</button>
</form>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            var contentInput = document.getElementById("contentInput");
            var fileUpload = document.getElementById("fileUpload");

            function toggleInputs() {
                if (contentInput.value.trim() !== "") {
                    fileUpload.disabled = true;
                } else {
                    fileUpload.disabled = false;
                }

                if (fileUpload.files.length > 0) {
                    contentInput.disabled = true;
                } else {
                    contentInput.disabled = false;
                }
            }

            contentInput.addEventListener("input", toggleInputs);
            fileUpload.addEventListener("change", toggleInputs);
        });
    </script>
}
