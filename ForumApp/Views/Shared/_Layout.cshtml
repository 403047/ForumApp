@using Microsoft.AspNetCore.Http
@{
    // Lấy thông tin từ Session
    var userId = Context.Session.GetInt32("UserId");
    var userRole = Context.Session.GetString("UserRole");
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ForumApp</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" crossorigin="anonymous" />
    @RenderSection("Styles", required: false)
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
            @* Logo + nút Home chỉ hiện khi không phải Admin *@
            @if (userRole != "Admin")
            {
                <a class="navbar-brand" href="@Url.Action("Index", "Home")">ForumApp</a>
                <button class="navbar-toggler" type="button"
                        data-bs-toggle="collapse"
                        data-bs-target="#navbarNav"
                        aria-controls="navbarNav"
                        aria-expanded="false"
                        aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
            }

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    @if (userId != null)
                    {
                        @* Khi đã đăng nhập *@
                        @if (userRole == "User")
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle d-flex align-items-center"
                                   href="#"
                                   id="userDropdown"
                                   role="button"
                                   data-bs-toggle="dropdown"
                                   aria-expanded="false">
                                    <i class="fas fa-user me-1"></i>
                                    <span>@Context.Session.GetString("Username")</span>
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                                    <li><a class="dropdown-item" href="@Url.Action("Index", "SuaThongTin")">Sửa thông tin</a></li>
                                    <li><a class="dropdown-item" href="@Url.Action("BaiDangUser", "BaiDang")">Xem bài đăng của mình</a></li>
                                    <li><a class="dropdown-item" href="@Url.Action("Index", "QuanLyHoaDon")">Quản lý hóa đơn</a></li>
                                    <li><a class="dropdown-item" href="@Url.Action("Index", "BookMark")">Bookmark</a></li>
                                    <li><a class="dropdown-item" href="@Url.Action("Create", "Post")">Đăng bài</a></li>
                                    <li><hr class="dropdown-divider" /></li>
                                    <li><a class="dropdown-item" href="@Url.Action("Logout", "Account")">Đăng xuất</a></li>
                                </ul>
                            </li>
                        }
                        else if (userRole == "Admin")
                        {
                            <li class="nav-item">
                                <a class="nav-link text-danger" href="@Url.Action("Logout", "Account")">Đăng xuất</a>
                            </li>
                        }
                    }
                    else
                    {
                        @* Chưa đăng nhập *@
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Login", "Account")">Đăng nhập</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Register", "Account")">Đăng ký</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <div class="container mt-4">
        @RenderBody()
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
